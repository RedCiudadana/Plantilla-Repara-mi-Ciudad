<script>
  // Función para inicializar el mapa
  function initMap() {
    var map = L.map('map', {
      zoomControl: false // Desactivar los controles de zoom
    }).setView([14.634915, -90.506882], 14); // Coordenadas iniciales centradas en Ciudad de Guatemala con zoom 14


    // Agregar el mapa base de OpenStreetMap
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png').addTo(map);

    var marker;
    var overlay;

    // Manejar clics en el mapa para obtener las coordenadas y agregar un marcador
    map.on('click', function(e) {
      var latLng = e.latlng;
      var lat = latLng.lat.toFixed(6);
      var lng = latLng.lng.toFixed(6);

      // Si ya hay un marcador, lo removemos del mapa
      if (marker) {
        map.removeLayer(marker);
      }

      // Creamos un nuevo marcador en la posición del clic
      marker = L.marker(latLng).addTo(map);

      // Actualizamos las coordenadas en los elementos <span>
      document.getElementById('latitude').innerText = lat;
      document.getElementById('longitude').innerText = lng;
    });

    // Manejar cambios en el campo de entrada de dirección
    document.getElementById('addressInput').addEventListener('change', function() {
      var address = this.value;
      if (!address) return; // Si el campo de dirección está vacío, no hacemos nada

      // Realizar una solicitud de geocodificación a Nominatim
      var nominatimUrl = 'https://nominatim.openstreetmap.org/search';
      var params = {
        q: address,
        format: 'json',
        limit: 1
      };

      axios.get(nominatimUrl, { params })
        .then(function(response) {
          var data = response.data;
          if (data.length > 0) {
            var lat = data[0].lat;
            var lng = data[0].lon;

            // Si ya hay un overlay, lo removemos del mapa
            if (overlay) {
              map.removeLayer(overlay);
            }

            // Creamos un nuevo overlay en la posición de la dirección
            overlay = L.marker([lat, lng]).addTo(map);

            // Centramos el mapa en la ubicación del overlay
            map.setView([lat, lng], 14);

            // Actualizamos las coordenadas en los elementos <span>
            document.getElementById('latitude').innerText = lat;
            document.getElementById('longitude').innerText = lng;
          } else {
            alert('Dirección no encontrada');
          }
        })
        .catch(function(error) {
          console.error('Error al geocodificar la dirección:', error);
        });
    });
  }

  // Llamada a la función para inicializar el mapa cuando se cargue la página
  document.addEventListener('DOMContentLoaded', initMap);
</script>



