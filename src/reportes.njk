permalink: "reportes/index.html"
---

{% extends "src/base.njk" %}

{% block head %}
<title>Reportes | Red Ciudadana</title>

{% endblock %}

{% block content %}

<!-- Spacer -->
<div class="margin-top-90"></div>
<!-- Spacer / End-->

<!-- Page Content
================================================== -->
<div class="container">
	<div class="row">
			
		<div class="col-xl-12 col-lg-12 content-left-offset">

			<h3 class="page-title">Reportes</h3>

			<div class="notify-box margin-top-15">
				<div class="switch-container">
					<label class="switch"><input type="checkbox"><span class="switch-button"></span><span class="switch-text">Turn on email alerts for this search</span></label>
				</div>

				<div class="sort-by">
					<span>Sort by:</span>
					<select class="selectpicker hide-tick">
						<option>Relevance</option>
						<option>Newest</option>
						<option>Oldest</option>
						<option>Random</option>
					</select>
				</div>
			</div>

			<div class="listings-container compact-list-layout margin-top-35">
				
				{% for reporte in collections.reportes%}
				<!-- Job Listing -->
				<a href="{{reporte.url}}" class="job-listing">

					<!-- Job Listing Details -->
					<div class="job-listing-details">

						<!-- Logo -->
						<div class="job-listing-company-logo">
							<img src="/images/company-logo-01.png" alt="">
						</div>

						<!-- Details -->
						<div class="job-listing-description">
							<h3 class="job-listing-title">{{reporte.data.reportes.titulo}}</h3>
							<p class="job-listing-title">{{reporte.data.reportes.descripcion}}</p>
							<!-- Job Listing Footer -->
							<div class="job-listing-footer">
								<ul>
									<li><i class="icon-feather-folder-minus"></i> {{reporte.data.reportes.categoria}}</li>
									<li><i class="icon-feather-file"></i> {{reporte.data.reportes.subcategoria}}</li>
								</ul>
							</div>
						</div>

						<!-- Bookmark -->
						<!--span class="bookmark-icon"></span-->

						<div class="latitud" style="display:none">{{reporte.data.reportes.latitud}}</div>
						<div class="longitud" style="display:none">{{reporte.data.reportes.longitud}}</div>
					</div>
				</a>	

				{% endfor %}


			</div>


			<!-- Pagination -->
			<div class="clearfix"></div>
			<div class="row">
				<div class="col-md-12">
					<!-- Pagination -->
					<div class="pagination-container margin-top-60 margin-bottom-60">
						<nav class="pagination">
							<ul>
								<li class="pagination-arrow"><a href="#"><i class="icon-material-outline-keyboard-arrow-left"></i></a></li>
								<li><a href="#">1</a></li>
								<li><a href="#" class="current-page">2</a></li>
								<li><a href="#">3</a></li>
								<li><a href="#">4</a></li>
								<li class="pagination-arrow"><a href="#"><i class="icon-material-outline-keyboard-arrow-right"></i></a></li>
							</ul>
						</nav>
					</div>
				</div>
			</div>
			<!-- Pagination / End -->

		</div>
	</div>
</div>

{% endblock %}